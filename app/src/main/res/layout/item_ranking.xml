<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

  <ImageView
      android:id="@+id/iv_spec"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="5dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:id="@+id/tv_username"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:gravity="center_vertical"
      android:text="username"
      app:layout_constraintStart_toEndOf="@id/iv_spec"
      app:layout_constraintTop_toTopOf="@id/iv_spec"/>

  <TextView
      android:id="@+id/tv_average_item_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:text="980"
      app:layout_constraintBottom_toBottomOf="@id/iv_spec"
      app:layout_constraintStart_toStartOf="@id/tv_username"/>

  <TextView
      android:id="@+id/tv_total"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="10dp"
      android:text="2131180"
      app:layout_constraintStart_toEndOf="@id/tv_username"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/iv_talent_15"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="10dp"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toStartOf="@+id/iv_talent_30"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_chainStyle="spread"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_spec"/>

  <ImageView
      android:id="@+id/iv_talent_30"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/iv_talent_15"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toStartOf="@id/iv_talent_45"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@id/iv_talent_15"
      app:layout_constraintTop_toTopOf="@id/iv_talent_15"/>

  <ImageView
      android:id="@+id/iv_talent_45"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/iv_talent_15"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toStartOf="@id/iv_talent_60"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@id/iv_talent_30"
      app:layout_constraintTop_toTopOf="@id/iv_talent_15"/>

  <ImageView
      android:id="@+id/iv_talent_60"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/iv_talent_15"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toStartOf="@id/iv_talent_75"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@id/iv_talent_45"
      app:layout_constraintTop_toTopOf="@id/iv_talent_15"/>

  <ImageView
      android:id="@+id/iv_talent_75"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/iv_talent_15"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toStartOf="@id/iv_talent_90"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@id/iv_talent_60"
      app:layout_constraintTop_toTopOf="@id/iv_talent_15"/>

  <ImageView
      android:id="@+id/iv_talent_90"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/iv_talent_15"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toStartOf="@id/iv_talent_100"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@id/iv_talent_75"
      app:layout_constraintTop_toTopOf="@id/iv_talent_15"/>

  <ImageView
      android:id="@+id/iv_talent_100"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/iv_talent_15"
      app:layout_constraintDimensionRatio="W,1:1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHeight_min="40dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@id/iv_talent_90"
      app:layout_constraintTop_toTopOf="@id/iv_talent_15"/>

</androidx.constraintlayout.widget.ConstraintLayout>